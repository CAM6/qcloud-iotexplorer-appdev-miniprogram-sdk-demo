<!--pages/device-panel/nixie-tube-ips-panel/more-setting/more-setting.wxml-->

<van-popup show="{{ timePopupShow }}" position="bottom" bind:close="closeTimePopup">
  <van-datetime-picker
      type="datetime"
      value="{{ timeStamp }}"
      bind:cancel="closeTimePopup"
      bind:confirm="onConfirmTimePicker"
  />
</van-popup>
<van-popup show="{{ timeZonePopupShow }}" position="bottom" bind:close="closeTimeZonePopup">
  <van-picker
    default-index="{{timeZoneindex}}"
    columns="{{timeZoneList}}"
    show-toolbar
    bind:cancel="closeTimeZonePopup"
    bind:confirm="onConfirmTimeZonePicker"
  />
</van-popup>

<van-toast id="van-toast" />
<van-dialog id="van-dialog"  />


<view  class="mycontainer">
  <view class="title-class">
    <text>时间设置</text>
  </view>
  <view class="card">

    <view class="one-class">
      <van-cell 
        title="{{ deviceData.clock_is12h.properties.name === undefined ? '12小时制' :  deviceData.clock_is12h.properties.name }}:" 
        title-class="cell-title-class" 
        custom-class="custom-class"
      > 
        <van-switch 
          checked="{{ deviceData.clock_is12h.value ? true : false }}" 
          active-color="#0019ff" 
          bind:change="onSwitch12HChange" 
          size="20px" 
          custom-class="custom-class"
        />
      </van-cell>
    </view>

    <view class="one-class">
      <van-cell 
        title="{{ deviceData.clock_isntp.properties.name === undefined ? '网络自动同步时间' :  deviceData.clock_isntp.properties.name }}:" 
        title-class="cell-title-class" 
        custom-class="custom-class"
      > 
        <van-switch 
          checked="{{ deviceData.clock_isntp.value ? true : false }}" 
          active-color="#0019ff" 
          bind:change="onSwitchNTPChange" 
          size="20px" 
          custom-class="custom-class"
        />
      </van-cell>
    </view>

    <view class="one-class">
      <van-cell title="{{ deviceData.clock_utc.properties.name === undefined ? '时区设置' :  deviceData.clock_utc.properties.name }}:" is-link value="{{ deviceData.clock_utc.value }}"  id= "timeZone" bind:click="onOperationClick"	></van-cell>
    </view>
    <view class="one-class">
      <van-cell title="{{ deviceData.clock_time.properties.name === undefined ? '设置时间' :  deviceData.clock_time.properties.name }}:" is-link value="{{ timeValue }}" id= "timeSet" bind:click="onOperationClick"	></van-cell>
    </view>
  </view>
</view>


