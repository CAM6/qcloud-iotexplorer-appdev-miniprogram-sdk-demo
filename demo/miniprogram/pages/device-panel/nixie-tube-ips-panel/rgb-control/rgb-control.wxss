/* pages/device-panel/nixie-tube-ips-panel/rgb-control/rgb-control.wxss */

.color-picker-view {
  background-color: #fff;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.color-picker-slider {
 position: absolute;
 background-color: #fff;
}

.container {
  min-height: 100vh;
  background-color: #f9f9f9;
  margin-top: 30rpx;
  border-radius: 25rpx;
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.custom-color-btn-group {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
}
 
.custom-color-btn {
  margin-left: 25rpx;
  margin-right: 25rpx;
  width: 30rpx !important;
  height: 30rpx !important;
  border-radius: 0rpx;
}

.card {
  padding: 30rpx;
  background-color: #ffffff;
  font-size: 28rpx;
  color: #333333;
  border-radius: 25rpx;
  justify-content: center;
  width: 80%;
}

.slider-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
}

.slider-text {
  margin-right: 30rpx;
}

.custom-slider {
  width: 250px;
}

.custom-button {
  width: 26px;
  color: #fff;
  font-size: 10px;
  line-height: 18px;
  text-align: center;
  border-radius: 100px;
} 

.custom-radio-group {
  display: flex;
  flex-direction: row;
  align-items: center; 
  justify-content: flex-start;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

