<!--pages/device-panel/nixie-tube-ips-panel/rgb-control/rgb-control.wxml-->
<view>
  <view class="color-picker-view">
  <canvas id="colorPicker" style="width: {{raduis}}rpx;height: {{raduis}}rpx;" canvas-id="colorPicker" class="color-picker" />
  <canvas canvas-id="colorPickerSlider" class="color-picker-slider" style="width: {{raduis}}rpx;height: {{raduis}}rpx;z-index:1;background:rgba(255,255,255,0);" bindtouchstart="onSlide" bindtouchmove="onSlide" bindtouchend="onSlide" />
  </view>
    <view  class="container">
      <view class="custom-color-btn-group">
        <button wx:for="{{customColorArray}}" wx:key="index" class="custom-color-btn" type="default" style="background-color:{{item}};" id="{{index}}" bindtap="onClickCustomColor"></button>
    </view>
    <view class="card">
      <view class="slider-row">
        <view class="slider-text">亮度:</view>    
        <van-slider value="{{brightnessValue}}" bar-height="4px" active-color="#001aff" use-button-slot bind:drag="onBrightnessChange" custom-class="custom-slider">
          <view class="custom-button" slot="button" style="background-color: #001aff;">{{brightnessValue}}</view>
        </van-slider>
      </view>
      <view class="slider-row">
        <view class="slider-text">速度:</view>    
        <van-slider value="{{brightnessValue}}" bar-height="4px" active-color="#001aff" use-button-slot bind:drag="onBrightnessChange" custom-class="custom-slider">
          <view class="custom-button" slot="button" style="background-color: #001aff;">{{brightnessValue}}</view>
        </van-slider>
      </view>
      <view class="custom-radio-group">
        <van-radio-group value="{{ modeValue }}" bind:change="onRadioChange" direction="horizontal">
        <text class="slider-text">模式:</text>
          <van-radio name="1" custom-class="custom-radio" checked-color="#0019ff">静态</van-radio>
          <van-radio name="2" custom-class="custom-radio" checked-color="#0019ff">动态</van-radio>
          <van-radio name="3" custom-class="custom-radio" checked-color="#0019ff">彩虹</van-radio>
        </van-radio-group>
      </view>
    </view>
    <view class="switch_card">
      <van-cell title="开关:" title-class="cell-title-class" custom-class="custom-class"> 
        <van-switch checked="{{ switchValue }}" active-color="#0019ff" bind:change="onSwitchChange" size="20px" custom-class="custom-class"/>
      </van-cell>
    </view>
    
  </view>
</view>


