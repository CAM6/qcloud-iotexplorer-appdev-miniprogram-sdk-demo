{
	"compilerOptions": {
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es2017",
			"dom"
		],
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"src/vendor",
		"node_modules"
	]
}